<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StoreStudentServlet</servlet-name>
        <servlet-class>za.ac.tut.web.StoreStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>za.ac.tut.web.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewStudetntsServlet</servlet-name>
        <servlet-class>za.ac.tut.web.ViewStudetntsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveServlet</servlet-name>
        <servlet-class>za.ac.tut.web.RemoveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NumStudentsServlet</servlet-name>
        <servlet-class>za.ac.tut.web.NumStudentsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PercMalesServlet</servlet-name>
        <servlet-class>za.ac.tut.web.PercMalesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PercFemalesServlet</servlet-name>
        <servlet-class>za.ac.tut.web.PercFemalesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AvgMalesServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AvgMalesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AvgFemalesServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AvgFemalesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>YoungestServlet</servlet-name>
        <servlet-class>za.ac.tut.web.YoungestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>za.ac.tut.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StoreStudentServlet</servlet-name>
        <url-pattern>/StoreStudentServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewStudetntsServlet</servlet-name>
        <url-pattern>/ViewStudetntsServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveServlet</servlet-name>
        <url-pattern>/RemoveServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NumStudentsServlet</servlet-name>
        <url-pattern>/NumStudentsServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PercMalesServlet</servlet-name>
        <url-pattern>/PercMalesServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PercFemalesServlet</servlet-name>
        <url-pattern>/PercFemalesServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AvgMalesServlet</servlet-name>
        <url-pattern>/AvgMalesServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AvgFemalesServlet</servlet-name>
        <url-pattern>/AvgFemalesServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>YoungestServlet</servlet-name>
        <url-pattern>/YoungestServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>TeacherConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>TeacherResources</web-resource-name>
            <description>Resources available to the teacher</description>
            <url-pattern>/store.jsp</url-pattern>
            <url-pattern>/search.jsp</url-pattern>
            <url-pattern>/remove.jsp</url-pattern>
            <url-pattern>/view_all.jsp</url-pattern>
            <url-pattern>/NumStudentsServlet.do</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Constraints for a teacher</description>
            <role-name>Teacher</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>PrincipalConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>PrincipalResource</web-resource-name>
            <description>Resources available to principal</description>
            <url-pattern>/AvgFemalesServlet.do</url-pattern>
            <url-pattern>/AvgMalesServlet</url-pattern>
            <url-pattern>/PercFemalesServlet.do</url-pattern>
            <url-pattern>/PercMalesServlet.do</url-pattern>
            <url-pattern>/YoungestServlet.do</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Constraints for the principal</description>
            <role-name>Principal</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login_error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Role of a teacher</description>
        <role-name>Teacher</role-name>
    </security-role>
    <security-role>
        <description>Role of a principal</description>
        <role-name>Principal</role-name>
    </security-role>
    <error-page>
        <error-code>403</error-code>
        <location>/access_denied.jsp</location>
    </error-page>
</web-app>
